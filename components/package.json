{
    "name": "@genspectrum/dashboard-components",
    "version": "0.4.4",
    "description": "GenSpectrum web components for building dashboards",
    "type": "module",
    "license": "AGPL-3.0-only",
    "main": "dist/genspectrum-components.js",
    "module": "dist/genspectrum-components.js",
    "types": "dist/genspectrum-components.d.ts",
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "import": "./dist/dashboard-components.js",
            "require": "./dist/dashboard-components.js",
            "types": "./dist/genspectrum-components.d.ts"
        },
        "./custom-elements.json": "./custom-,elements.json",
        "./package.json": "./package.json",
        "./style.css": "./dist/style.css"
    },
    "files": [
        "dist",
        "src",
        "custom-elements.json",
        "package.json"
    ],
    "scripts": {
        "build": "vite --config vite.release.config.ts build && npm run generate-manifest",
        "build-and-pack": "npm run build && npm pack | xargs -I {} cp {} genspectrum-dashboard-components.tgz",
        "test": "vitest",
        "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
        "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
        "lint:lit-analyzer": "lit-analyzer",
        "generate-manifest": "npx custom-elements-manifest analyze --litelement --globs src/web-components/**",
        "generate-manifest:watch": "npm run generate-manifest -- --watch",
        "format": "prettier \"**/*.{ts,tsx,json,md,mdx,mjs,cjs}\" --write",
        "check-format": "prettier --check \"**/*.{ts,tsx,json,md,mdx,mjs,cjs}\"",
        "check-types": "tsc --noEmit",
        "check-dependencies": "depcheck",
        "storybook": "storybook dev -p 6006",
        "storybook-preact": "storybook dev --port 6007 --config-dir .storybook-preact",
        "build-storybook": "storybook build",
        "build-storybook-preact": "storybook build --config-dir .storybook-preact --output-dir storybook-static-preact",
        "test:storybook": "test-storybook",
        "test:storybook:preact": "test-storybook --config-dir .storybook-preact --url http://localhost:6007",
        "test:playwright": "playwright test",
        "test:playwright:update-snapshots": "playwright test --update-snapshots"
    },
    "customElements": "custom-elements.json",
    "keywords": [
        "web-components",
        "lit-element",
        "typescript",
        "lit"
    ],
    "dependencies": {
        "@floating-ui/dom": "^1.6.5",
        "@floating-ui/utils": "^0.2.2",
        "@lit/context": "^1.1.1",
        "@lit/reactive-element": "^2.0.4",
        "@lit/task": "^1.0.0",
        "chart.js": "^4.4.2",
        "chartjs-chart-error-bars": "^4.4.0",
        "chartjs-chart-venn": "^4.3.0",
        "dayjs": "^1.11.10",
        "flatpickr": "^4.6.13",
        "gridjs": "^6.2.0",
        "lit": "^3.1.3",
        "preact": "^10.20.1",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.10.2",
        "@playwright/test": "^1.43.1",
        "@storybook/addon-actions": "^8.0.9",
        "@storybook/addon-essentials": "^8.0.9",
        "@storybook/addon-interactions": "^8.0.9",
        "@storybook/addon-links": "^8.0.9",
        "@storybook/blocks": "^8.0.10",
        "@storybook/preact": "^8.0.9",
        "@storybook/preact-vite": "^8.0.9",
        "@storybook/test": "^8.0.0",
        "@storybook/test-runner": "^0.18.0",
        "@storybook/types": "^8.0.9",
        "@storybook/web-components": "^8.0.9",
        "@storybook/web-components-vite": "^8.0.9",
        "@types/node": "^20.12.7",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "@typescript-eslint/parser": "^7.7.0",
        "autoprefixer": "^10.4.19",
        "daisyui": "^4.10.2",
        "depcheck": "^1.4.7",
        "eslint": "^8.57.0",
        "eslint-config-preact": "^1.3.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^28.2.0",
        "eslint-plugin-storybook": "^0.8.0",
        "http-server": "^14.1.1",
        "lit-analyzer": "^2.0.3",
        "msw": "^2.2.14",
        "postcss": "^8.4.38",
        "prettier": "^3.2.5",
        "react": "^18.3.1",
        "storybook": "^8.0.9",
        "storybook-addon-fetch-mock": "^2.0.0",
        "tailwindcss": "^3.4.3",
        "typescript": "~5.4.5",
        "vite": "^5.2.10",
        "vite-plugin-dts": "^3.8.3",
        "vitest": "^1.5.0"
    }
}
