{
    "name": "genspectrum-components",
    "private": true,
    "version": "0.1.0",
    "description": "GenSpectrum web components",
    "type": "module",
    "scripts": {
        "build": "vite build",
        "serve": "vite dev",
        "test": "vitest",
        "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
        "lint:eslint": "eslint 'src/**/*.ts'",
        "lint:lit-analyzer": "lit-analyzer",
        "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
        "check-format": "prettier --check \"**/*.{ts,tsx,json,md,mdx,mjs,cjs}\"",
        "storybook": "storybook dev -p 6006",
        "storybook-preact": "storybook dev --port 6007 --config-dir .storybook-preact",
        "build-storybook": "storybook build",
        "build-storybook-preact": "storybook build --config-dir .storybook-preact --output-dir storybook-static-preact",
        "test:storybook": "test-storybook",
        "test:storybook:preact": "test-storybook --config-dir .storybook-preact --url http://localhost:6007",
        "test:playwright": "playwright test",
        "test:playwright:update-snapshots": "playwright test --update-snapshots"
    },
    "keywords": [
        "web-components",
        "lit-element",
        "typescript",
        "lit"
    ],
    "dependencies": {
        "@floating-ui/dom": "^1.6.3",
        "@lit/context": "^1.1.0",
        "@lit/task": "^1.0.0",
        "chart.js": "^4.4.2",
        "dayjs": "^1.11.10",
        "flatpickr": "^4.6.13",
        "gridjs": "^6.2.0",
        "lit": "^3.1.2",
        "preact": "^10.19.7"
    },
    "devDependencies": {
        "@playwright/test": "^1.42.1",
        "@preact/preset-vite": "^2.8.2",
        "@storybook/addon-essentials": "^8.0.0",
        "@storybook/addon-interactions": "^8.0.0",
        "@storybook/addon-links": "^8.0.0",
        "@storybook/blocks": "^8.0.0",
        "@storybook/preact": "^8.0.0",
        "@storybook/preact-vite": "^8.0.0",
        "@storybook/test": "^8.0.0",
        "@storybook/test-runner": "^0.17.0",
        "@storybook/web-components": "^8.0.0",
        "@storybook/web-components-vite": "^8.0.0",
        "@types/node": "^20.11.25",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "autoprefixer": "^10.4.18",
        "daisyui": "^4.7.3",
        "eslint": "^8.57.0",
        "eslint-config-preact": "^1.3.0",
        "eslint-plugin-jest": "^27.9.0",
        "eslint-plugin-storybook": "^0.8.0",
        "http-server": "^14.1.1",
        "lit-analyzer": "^2.0.3",
        "msw": "^2.2.3",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "storybook": "^8.0.0",
        "storybook-addon-fetch-mock": "^2.0.0",
        "tailwindcss": "^3.4.1",
        "typescript": "~5.4.2",
        "vite": "^5.1.6",
        "vitest": "^1.3.1"
    }
}
